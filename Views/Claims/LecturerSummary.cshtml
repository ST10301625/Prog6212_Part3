@model IEnumerable<CMS.Models.LecturerSummaryViewModel>

@{
    ViewData["Title"] = "Lecturer Claims Summary";
}

<h1>Lecturer Claims Summary</h1>

<table class="table">
    <thead>
        <tr>
            <th>Lecturer Name</th>
            <th>Total Owed</th>
            <th>Total Hours Worked</th>
            <th>Average Hourly Rate</th>
            <th>Additional Notes</th>
            <th>Last Submitted Date</th>
            <th>Download Report</th> <!-- New column for download button -->
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.LecturerName</td>
                <td>@item.TotalOwed.ToString("C")</td> <!-- Format as currency -->
                <td>@item.HoursWorked</td>
                <td>@item.HourlyRate.ToString("C")</td> <!-- Format as currency -->
                <td>@item.AdditionalNotes</td>
                <td>@item.SubmittedDate.ToShortDateString()</td> <!-- Format date -->
                <td>
                    <!-- Button to download the lecturer's claim report -->
                    <a href="@Url.Action("DownloadLecturerReport", "Claims", new { lecturerName = item.LecturerName })" class="btn btn-primary">
                        Download Report
                    </a>
                </td>
            </tr>
        }
    </tbody>
</table>
